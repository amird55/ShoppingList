<%- include ("header.ejs") %>
<%- include ("menu.ejs") %>
<main>
    <table>
        <tr>
            <td colspan="100">
                <form action="/C/Add" method="get">
                    <button>+הוספה</button>
                </form>
            </td>
        </tr>
        <tr>
            <th></th>
            <th>שם </th>
            <th></th>
        </tr>
        <% for(let item of data) { %>
            <tr>
                <td>
                    <form action="/C/Edit" method="get">
                        <input type="hidden" name="id" value="<%= item._id %>">
                        <button>ערוך</button>
                    </form>
                </td>
                <td><%= item.name %></td>
                <td>
                    <form action="/C/Delete" method="post"
                          onsubmit="return confirm('נא לאשר מחיקה' );return false;">
                        <input type="hidden" name="id" value="<%= item._id %>">
                        <button>מחיקה</button>
                    </form>
                </td>
            </tr>
        <% } %>
    </table>
</main>
